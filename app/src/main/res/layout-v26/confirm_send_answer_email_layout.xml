<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:paddingStart="20dp"
                                                   android:paddingEnd="20dp"
                                                   android:paddingTop="50dp"
                                                   android:paddingBottom="50dp"
>

    <TextView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:autoSizeTextType="uniform"
            android:text="@string/confirm_send_email"
            android:ems="10"
            android:id="@+id/confirm_mail_send"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"/>

    <Button
            android:text="@string/send"
            android:layout_width="wrap_content"
            android:paddingHorizontal="32dp"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content" android:id="@+id/btn_send"
            style="@style/AppTheme"
            android:background="@drawable/btn_small_rounded"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_mail_send"/>
    <Button
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:paddingHorizontal="32dp"

            android:layout_height="wrap_content" android:id="@+id/btn_cancel"
            style="@style/AppTheme"
            android:background="@drawable/btn_rounded_cancel"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/confirm_mail_send"/>

</androidx.constraintlayout.widget.ConstraintLayout>
